<script type="text/javascript">
    function wValDisp(sts, idx){
        if (getObject("sbArea_" + sts + "").style.display == "none") {
            getObject("sbArea_" + sts + "").style.display = "";
        }
        else {
            getObject("sbArea_" + sts + "").style.display = "none";
        }
    }
    
    function getObject(objectId){
        // checkW3C DOM, then MSIE 4, then NN 4. 
        if (document.getElementById && document.getElementById(objectId)) {
            return document.getElementById(objectId);
        }
        else 
            if (document.all && document.all(objectId)) {
                return document.all(objectId); // IE4,5.0 
            }
            else 
                if (document.layers && document.layers[objectId]) {
                    return document.layers[objectId]; // Netscape 4.x 
                }
                else {
                    return false;
                }
    }
    
    function wValChg(idx, sts){
        if (idx == "1") 
            getObject("wn_" + sts + "").innerHTML = "1:00AM";
			document.getElementById("sel_time").value = "1:00AM";
        if (idx == "2") 
            getObject("wn_" + sts + "").innerHTML = "2:00AM";
			document.getElementById("sel_time").value = "2:00AM";
        if (idx == "3") 
            getObject("wn_" + sts + "").innerHTML = "3:00AM";
        if (idx == "4") 
            getObject("wn_" + sts + "").innerHTML = "4:00AM";
        if (idx == "5") 
            getObject("wn_" + sts + "").innerHTML = "5:00AM";
        if (idx == "6") 
            getObject("wn_" + sts + "").innerHTML = "6:00AM";
        if (idx == "7") 
            getObject("wn_" + sts + "").innerHTML = "7:00AM";
        if (idx == "8") 
            getObject("wn_" + sts + "").innerHTML = "8:00AM";
        if (idx == "9") 
            getObject("wn_" + sts + "").innerHTML = "9:00AM";
        if (idx == "10") 
            getObject("wn_" + sts + "").innerHTML = "10:00AM";
        if (idx == "11") 
            getObject("wn_" + sts + "").innerHTML = "11:00AM";
        if (idx == "12") 
            getObject("wn_" + sts + "").innerHTML = "12:00AM";
        if (idx == "13") 
            getObject("wn_" + sts + "").innerHTML = "1:00PM";
        if (idx == "14") 
            getObject("wn_" + sts + "").innerHTML = "2:00PM";
        if (idx == "15") 
            getObject("wn_" + sts + "").innerHTML = "3:00PM";
        if (idx == "16") 
            getObject("wn_" + sts + "").innerHTML = "4:00PM";
        if (idx == "17") 
            getObject("wn_" + sts + "").innerHTML = "5:00PM";
        if (idx == "18") 
            getObject("wn_" + sts + "").innerHTML = "6:00PM";
        if (idx == "19") 
            getObject("wn_" + sts + "").innerHTML = "7:00PM";
        if (idx == "20") 
            getObject("wn_" + sts + "").innerHTML = "8:00PM";
        if (idx == "21") 
            getObject("wn_" + sts + "").innerHTML = "9:00PM";
        if (idx == "22") 
            getObject("wn_" + sts + "").innerHTML = "10:00PM";
        if (idx == "23") 
            getObject("wn_" + sts + "").innerHTML = "11:00PM";
        if (idx == "24") 
            getObject("wn_" + sts + "").innerHTML = "12:00PM";
        getObject("sbArea_" + sts + "").style.display = "none";
    }
    
    function getNavigatorType(){
        if (navigator.appName == "Microsoft Internet Explorer") 
            return 1;
        else 
            if (navigator.appName == "Netscape") 
                return 2;
            else 
                return 0;
    }
    
    function setSelBox(event){
        var _event;
        switch (getNavigatorType()) {
            case 1: // IE
                _event = window.event;
                node = _event.srcElement;
                nodeName = _event.srcElement.className;
                break;
            case 2: // Netscape
                _event = event;
                node = _event.target;
                nodeName = _event.target.className;
                break;
            default:
                nodeName = "None";
                break;
        }
        if (nodeName == "dselObj") {
        
        }
        else {
            try {
                document.getElementById("sbArea_h").style.display = "none";
            } 
            catch (e) {
            }
        }
    }
    
    document.onmousedown = setSelBox;
</script>


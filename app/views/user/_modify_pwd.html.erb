<%= error_messages_for :user %>
<% form_for :user,:update=>"info",:url => { :action => :modify } do |form| %>
<fieldset>
    <legend>
        修改密码
    </legend>
    <%= hidden_field_tag "attribute", "modify_pwd", :id => nil %>
    <div class="form_row">
        <label for="current_password">
            当前密码:
        </label>
        <%= form.password_field :current_password,
        :size =>      User::PASSWORD_SIZE,
        :maxlength => User::PASSWORD_MAX_LENGTH %>
    </div>
    <div class="form_row">
        <label for="password">
            新密码:
        </label>
        <%= form.password_field :password,
        :size =>      User::PASSWORD_SIZE,
        :maxlength => User::PASSWORD_MAX_LENGTH %>
    </div>
    <div class="form_row">
        <label for="password_confirmation">
            确认密码:
        </label>
        <%= form.password_field :password_confirmation,
        :size =>      User::PASSWORD_SIZE,
        :maxlength => User::PASSWORD_MAX_LENGTH %>
    </div>
    <%= submit_tag "提交", :class => "submit" %>
</fieldset>
<% end %>
<% form_for :user, :url => { :action => :modify } do |form| %>
<fieldset>
    <legend>
        密码保护问题
    </legend>
    <%= hidden_field_tag "attribute", "pwd_protect", :id => nil %>
    <div class="form_row">
        选择保护问题：<%= form.select :question, @question_items %>
    </div>
    <div class="form_row">
        <label for="answer">
            问题答案:
        </label>
        <%= form.text_field :answer,
        :size =>      User::PASSWORD_SIZE,
        :maxlength => User::PASSWORD_MAX_LENGTH %>
    </div>
    <div class="form_row">
        <label for="email">
            安全邮箱:
        </label>
        <%= form.text_field :email,
        :size =>      User::PASSWORD_SIZE,
        :maxlength => User::PASSWORD_MAX_LENGTH %>
    </div>
    <div class="form_row">
        <label for="password">
            密码:
        </label>
        <%= form.password_field :password,
        :size =>      User::PASSWORD_SIZE,
        :maxlength => User::PASSWORD_MAX_LENGTH %>
    </div>
    <%= submit_tag "提交", :class => "submit" %>
</fieldset>
<% end %>
</div>

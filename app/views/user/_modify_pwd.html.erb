        <br>
        <label>
            问题答案:
        </label>
        <br>
        <%= text_field_tag :answer,"",:size =>User::PASSWORD_SIZE,:maxlength => User::PASSWORD_MAX_LENGTH %>
        <br>
        <label>
            安全邮箱:
        </label>
        <br>
        <%= text_field_tag :email,"",:size =>User::EMAIL_SIZE,:maxlength => User::EMAIL_MAX_LENGTH %>
        <br>
        <label>
            密码:
        </label>
        <br>
        <%= text_field_tag :password,"",:size =>User::PASSWORD_SIZE,:maxlength => User::PASSWORD_MAX_LENGTH %>
    </div>
    <%=submit_tag "提交" %>
    <%end %>
</fieldset>
</div>

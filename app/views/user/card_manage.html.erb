<div>
    帐号管理
    <ul>
        <li>
            <%= link_to("密码管理",{ :controller => :user,:action=>"modify_pwd"}) %>
        </li>
        <li>
            <%= link_to("登录信息管理",{ :controller => :user,:action=>"login_infor"}) %>
        </li>
    </ul>
</div>
<div style="height:600px;width:600px;border:1px solid;position:absolute;left:200px;top:200px;">
    <%= error_messages_for :user %>
    <% form_for :user do |form| %>
    <fieldset>
        <div class="form_row">
            <label for="member">
                会员:
            </label>
            <%= form.password_field :member,
            :size =>      User::PASSWORD_SIZE,
            :maxlength => User::PASSWORD_MAX_LENGTH %>
        </div>
        <div class="form_row">
            <label for="email">
                邮箱:
            </label>
            <%= form.password_field :email,
            :size =>      User::PASSWORD_SIZE,
            :maxlength => User::PASSWORD_MAX_LENGTH %>
        </div>
        <div class="form_row">
            <label for="password_confirmation">
                确认密码:
            </label>
            <%= form.password_field :password_confirmation,
            :size =>      User::PASSWORD_SIZE,
            :maxlength => User::PASSWORD_MAX_LENGTH %>
        </div>
        <%= submit_tag "提交", :class => "submit" %>
    </fieldset>
    <% end %>
</div>
